<%- include('partials/header') %>

<div class='container'>
	<h1>Add New Player</h1>
	<form action='/players/<%=player._id%>?_method=PUT' method="POST">
		
	  <div class="form-group">
		<label for="name" class="form-label">Player Name:</label>
		<input type="text" class="form-control" name="name" value="<%=player.name%>">
	  </div>
	  <div class="mb-3">
		<label for="sport" class="form-label">Sport:</label>
		  <select type="text" class="form-control" name="sport" value="<%=player.sport%>">
		  	<option disabled >Choose from list</option>	
		  	<option <%=player.sport === "baseball" ? "selected" : ""%>>Baseball</option>	
		  	<option <%=player.sport === "basketball" ? "selected" : ""%>>Basketball</option>	
		  	<option <%=player.sport === "football" ? "selected" : ""%>>Football</option>	
		  	<option <%=player.sport === "track" ? "selected" : ""%>>Track</option>	
		  </select>
	  </div>
	  <div class="form-group">
		<label for="description" class="form-label">Description:</label>
		<input type="text" class="form-control" name="description" value="<%=player.description%>"
		>
	  </div>
		
	  <div class="form-group">
		<label for="startDate" class="form-label">Start Date:</label>
		<input type="date" class="form-control" name="startDate" value="<%=player.startDate.toISOString().split("T")[0]%>">
	  </div>
		
	  <div class="form-group">
		<label for="endDate" class="form-label">End Date:</label>
		<input type="date" class="form-control" name="endDate" value="<%=player.endDate.toISOString().split("T")[0]%>">
	  </div>
		
	  <div class="form-group">
		<label for="number" class="form-label">Number:</label>
		<input type="number" class="form-control" name="number" value="<%=player.number%>">
	  </div>
		
	  <div class="form-group">
		<input type="checkbox" class="form-check-input" name="professional" <%= player.professional ? "checked" : ""%>>
		<label for="professional" class="form-label">Professional Career?</label>

		</div>
	  <div class="form-group">
		<label for="image" class="form-label">Image Link:</label>
		<input type="text" class="form-control" name="image" value="<%=player.image%>">
	  </div>
	  <button type="submit" class="btn btn-warning">Submit</button>
	</form>


</div>


<%- include('partials/footer') %>